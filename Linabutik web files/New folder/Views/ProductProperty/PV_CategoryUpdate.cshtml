@using _201224_LinaButikPanel.Models
@model Features

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Kategori Ekle</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("CategoryUpdate", "ProductProperty", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Id)
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "True" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Property)
                    @Html.TextBoxFor(x => x.Property, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Property, "", new { @style = "color: red;" })
                </div>

                <button type="submit" class="btn btn-success">Güncelle</button>
            }
        </div>
    </div>
</div>