@model _201224_LinaButikPanel.Models.Customers
@{
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Müşteriler</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Müşteri Id: @Model.NameSurname </li>
</ol>
<hr />

@using (Html.BeginForm("Update", "Customer", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "True" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.NameSurname)
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NameSurname, "", new { @style = "color: red;" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Mail)
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @readonly = "True" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", aria_describedby = "passwordHelpBlock" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color: red;" })
        <small id="passwordHelpBlock" class="form-text text-muted">
            Şifreniz en fazla 15 karakter uzunluğunda olmalıdır.
        </small>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.TelephoneNumber)
        @Html.TextBoxFor(x => x.TelephoneNumber, new { @class = "form-control", @type = "tel", @placeholder = "(555) 123 1111", @data_inputmask = "'mask': '(999) 999-9999'", @data_mask = true })
        @Html.ValidationMessageFor(x => x.TelephoneNumber, "", new { @style = "color: red;" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
}