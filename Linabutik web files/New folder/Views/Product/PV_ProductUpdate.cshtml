@using _201224_LinaButikPanel.Models
@model Products


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Ürün Güncelleme</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Update", "Product", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    @Html.LabelFor(x => x.ProductCode)
                    @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ProductCode, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.CategoryID)
                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryID, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.BrandID)
                    @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.Brands, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.BrandID, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.ColorID)
                    @Html.DropDownListFor(x => x.ColorID, (List<SelectListItem>)ViewBag.Colors, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ColorID, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.SizeID)
                    @Html.DropDownListFor(x => x.SizeID, (List<SelectListItem>)ViewBag.Sizes, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.SizeID, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Price)
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">₺</span>
                        </div>
                        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @type = "number", @min = 1 })
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(x => x.Price, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Description)
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color: red;" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.SaleStatus)
                    @Html.DropDownListFor(x => x.SaleStatus, new List<SelectListItem>
               {
                 new SelectListItem { Text = "Satışta", Value = "true"},
                 new SelectListItem { Text = "Satışa kapalı", Value = "false"}
               },
               new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-success">Güncelle</button>
            }
        </div>
    </div>
</div>